<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>DS món chế biến</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      margin: 0;
      font-family: "Segoe UI", sans-serif;
      background-color: #f3f1f0;
    }
    header {
      background-color: #0c100c;
      color: white;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 1.5rem;
    }
    .nav-left, .nav-right {
      display: flex;
      align-items: center;
      gap: 1.5rem;
    }
    .nav-title {
      font-size: 1.5rem;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    .btn {
      border: none;
      border-radius: 5px;
      padding: 0.5rem 1rem;
      font-weight: bold;
      cursor: pointer;
    }
    .btn-red { background: #e74c3c; color: white; }
    .btn-green { background: #2ecc71; color: white; }

    main {
      display: flex;
      gap: 1.5rem;
      padding: 1.5rem;
      flex-wrap: wrap;
    }
    .order-card {
      background: #f0f0f0;
      border-radius: 6px;
      width: 300px;
      padding: 1rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      position: relative;
    }
    .order-header {
      background: #ccc;
      padding: 0.5rem;
      border-radius: 4px;
      font-weight: bold;
    }
    .order-time {
      position: absolute;
      top: 10px;
      right: 10px;
      font-weight: bold;
      display: flex;
      align-items: center;
      gap: 5px;
    }
    .item {
      background: white;
      padding: 0.5rem 1rem;
      border-radius: 999px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 0.3rem 0;
    }
    .item.done {
      background: #bdc3c7;
      color: white;
      text-decoration: line-through;
    }
    .item button {
      background: none;
      border: none;
      cursor: pointer;
      font-size: 1.1rem;
      color: #27ae60;
    }

    footer {
      display: flex;
      gap: 1rem;
      padding: 1rem 2rem;
      flex-wrap: wrap;
    }
    .footer-card {
      width: 180px;
      padding: 1rem;
      border-radius: 6px;
      background: white;
      text-align: center;
      box-shadow: 0 2px 6px rgba(0,0,0,0.15);
      position: relative;
    }
    .footer-card.red { background: #c0392b; color: white; }
    .footer-card.orange { background: #d35400; color: white; }
    .footer-card.green { background: #27ae60; color: white; }
    .footer-card .hot {
      position: absolute;
      top: -8px;
      right: -8px;
      background: red;
      color: white;
      padding: 2px 5px;
      border-radius: 5px;
      font-size: 0.75rem;
    }
  </style>
</head>
<body>

<header>
  <div class="nav-left">
    <i class="fas fa-bars"></i>
    <div class="nav-title"><i class="fas fa-clipboard-list"></i> DS món chế biến</div>
    <button class="btn btn-red"><i class="fas fa-bell"></i> Báo hết</button>
    <button class="btn btn-green"><i class="fas fa-bell-concierge"></i> Trả hết</button>
  </div>
  <div class="nav-right">
    <i class="fas fa-wifi"></i>
    <i class="fas fa-question-circle"></i>
    <i class="fas fa-power-off"></i>
    <div><i class="fas fa-user"></i> <%= user.name %></div>
  </div>
</header>

<main>
  <% orders.forEach(order => { %>
    <div class="order-card">
      <div class="order-header">Bàn <%= order.tableNumber %></div>
      
      <% order.items.forEach(item => { %>
        <div class="item <%= item.status === 'done' ? 'done' : '' %>">
          <span><%= item.name %> (<%= item.quantity %>)</span>
          <% if (item.status !== 'done') { %>
            <button onclick="markItemDone('<%= order._id %>', '<%= item._id %>', this)">
              <i class="fas fa-bell"></i>
            </button>
          <% } %>
        </div>
      <% }) %>
    </div>
  <% }) %>
  
</main>

<footer>
  <% orders.forEach((order, idx) => {
    let colorClass = idx === 0 ? 'green' : idx === 1 ? 'orange' : 'red';
  %>
    <div class="footer-card <%= colorClass %>">
      <% if (idx === 0) { %><div class="hot">HOT</div><% } %>
      <div><strong>Bàn <%= order.table %> - Tầng <%= order.floor %></strong></div>
      <div><%= order.time %> phút <i class="fas fa-clock"></i></div>
    </div>
  <% }) %>
</footer>

<script>
  async function markItemDone(orderId, itemId, btn) {
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
    try {
      const res = await fetch('/bartender/item-complete', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({ orderId, itemId })
      });
      if (res.ok) {
        const itemDiv = btn.closest('.item');
        itemDiv.classList.add('done');
        btn.remove();
      } else {
        alert('Lỗi khi cập nhật món.');
        btn.innerHTML = '<i class="fas fa-bell"></i>';
        btn.disabled = false;
      }
    } catch (err) {
      console.error(err);
      alert('Lỗi kết nối!');
      btn.innerHTML = '<i class="fas fa-bell"></i>';
      btn.disabled = false;
    }
  }
</script>

</body>
</html>

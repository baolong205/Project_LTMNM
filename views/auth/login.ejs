<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đăng nhập</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #a67d7d;
      font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
      max-width: 500px;
      margin: 50px auto;
      padding: 30px;
      background-color: transparent;
      text-align: center;
    }

    .login-container img {
      width: 120px;
      margin-bottom: 20px;
    }

    .form-label {
      font-weight: bold;
      text-align: left;
      display: block;
      margin-bottom: 5px;
      color: #302622;
    }

    .form-control {
      border-radius: 12px;
      box-shadow: 2px 2px 5px #51463c;
      border: none;
      padding: 10px 15px;
    }

    .form-check {
      display: inline-block;
      margin: 0 10px;
    }

    .form-check-label {
      margin-left: 5px;
      color: #3e1d0c;
      font-weight: 500;
    }

    .btn-login {
      background-color: #5e2e1f;
      color: white;
      font-weight: bold;
      padding: 12px 30px;
      border-radius: 12px;
      border: none;
      box-shadow: 2px 2px 6px #7e4a33;
      margin-top: 20px;
      font-size: 18px;
      width: 100%;
      text-transform: uppercase;
    }

    .btn-login:hover {
      background-color: #4b2217;
    }
  </style>
</head>
<body>

  <div class="login-container">
    <!-- Logo -->
    <img src="/image/logo.png" alt="Logo">
    <!-- Hiển thị lỗi nếu có -->
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <!-- Form đăng nhập -->
    <form action="/auth/login" method="POST">
      <div class="mb-3 text-start">
        <label for="username" class="form-label">Tên đăng nhập</label>
        <input type="text" class="form-control" id="username" name="username" required>
      </div>

      <div class="mb-3 text-start">
        <label for="password" class="form-label">Mật khẩu</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>

      <div class="mb-3 text-start">
        <label class="form-label">Vai trò</label>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="role" id="phuc_vu" value="Phục vụ" required>
          <label class="form-check-label" for="phuc_vu">Phục vụ</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="role" id="thu_ngan" value="Thu ngân">
          <label class="form-check-label" for="thu_ngan">Thu ngân</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="role" id="pha_che" value="Pha chế">
          <label class="form-check-label" for="pha_che">Pha chế</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="role" id="admin" value="Admin">
          <label class="form-check-label" for="admin">Admin</label>
        </div>        
      </div>

      <button type="submit" class="btn btn-login">Đăng nhập</button>
    </form>
  </div>

</body>
</html>

<%- include('../partials/header') %>

<style>
/* Đảm bảo body sử dụng flexbox để đẩy footer xuống dưới */
html, body {
  height: 100%;
  margin: 0;
  font-family: 'Roboto', sans-serif; /* Đồng bộ font chữ */
}

body {
  display: flex;
  flex-direction: column;
  background-color: #f5f1e9; /* Tông màu nền nhẹ nhàng */
}

/* Nội dung chính */
.payment-list-container {
  flex: 1 0 auto; /* Đẩy footer xuống dưới */
  padding: 20px; /* Giảm padding để tiết kiệm không gian */
  max-width: 1200px;
  margin: 0 auto;
  min-height: calc(100vh - 150px); /* Giảm chiều cao tối thiểu để cân đối */
  display: flex;
  flex-direction: column;
  justify-content: flex-start; /* Căn nội dung lên trên */
  align-items: center; /* Căn giữa theo chiều ngang */
}

/* Footer */
footer {
  flex-shrink: 0;
  text-align: center;
  padding: 10px; /* Giảm padding để footer gọn hơn */
  background-color: #f8f9fa;
  font-size: 13px; /* Giảm font-size */
  color: #666;
}

/* Header section */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center; /* Căn giữa theo chiều dọc */
  width: 100%;
  margin-bottom: 15px; /* Giảm margin-bottom */
  padding: 10px 0;
  border-bottom: 1px solid #e6d9c6; /* Thêm đường viền nhẹ để phân cách */
}

.header-section h2 {
  font-size: 22px; /* Giảm font-size để gọn hơn */
  font-weight: 600;
  color: #4a2c2a; /* Đồng bộ với màu header */
  display: flex;
  align-items: center;
  margin: 0; /* Bỏ margin mặc định */
}

.header-section h2 i {
  margin-right: 8px;
  font-size: 20px;
}

/* Style cho đường link "Xem lịch sử thanh toán" */
.header-section .history-link {
  font-size: 15px; /* Giảm font-size */
  font-weight: 500;
  color: #007bff;
  text-decoration: none;
  display: flex;
  align-items: center;
  transition: color 0.3s ease, transform 0.3s ease;
}

.header-section .history-link:hover {
  color: #0056b3;
  transform: translateY(-2px); /* Hiệu ứng hover nhẹ */
}

.header-section .history-link i {
  margin-right: 6px;
  font-size: 14px;
}

/* Tiêu đề "Bàn cần thanh toán" */
.tables-grid h3 {
  font-size: 18px; /* Giảm font-size */
  font-weight: 500;
  color: #333;
  margin: 15px 0; /* Giảm margin */
  text-align: center;
}

/* Card thông báo khi không có bàn */
.no-tables-card {
  background: white;
  border-radius: 10px;
  padding: 25px; /* Giảm padding */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08); /* Giảm bóng đổ */
  text-align: center;
  max-width: 350px; /* Thu nhỏ card */
  width: 100%;
  border: 1px solid #e6d9c6;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.no-tables-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 14px rgba(0, 0, 0, 0.1);
}

.no-tables-card p {
  font-size: 15px; /* Giảm font-size */
  color: #666;
  margin-bottom: 15px; /* Giảm margin */
}

/* Nút "Làm mới" */
.btn-refresh {
  background-color: #007bff;
  color: white;
  border: none;
  padding: 8px 18px; /* Giảm padding */
  border-radius: 6px; /* Giảm border-radius */
  font-size: 13px; /* Giảm font-size */
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.btn-refresh:hover {
  background-color: #0056b3;
  transform: translateY(-2px);
}

.btn-refresh i {
  margin-right: 5px;
  font-size: 12px;
}

/* Style cho danh sách bàn (khi có dữ liệu) */
.tables-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Thu nhỏ kích thước card */
  gap: 15px; /* Giảm khoảng cách giữa các card */
  width: 100%;
}

.table-card {
  background: white;
  border-radius: 10px;
  padding: 15px; /* Giảm padding */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.table-card:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 14px rgba(0, 0, 0, 0.1);
}

.table-card .table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px; /* Giảm margin */
}

.table-card h4 {
  font-size: 16px; /* Giảm font-size */
  font-weight: 500;
  color: #333;
  margin: 0;
}

.table-card .status {
  font-size: 13px; /* Giảm font-size */
  color: #ff9800;
}

.btn-pay {
  width: 100%;
  padding: 10px; /* Giảm padding */
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 6px; /* Giảm border-radius */
  font-size: 13px; /* Giảm font-size */
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.btn-pay:hover {
  background-color: #218838;
  transform: translateY(-2px);
}

.btn-pay i {
  margin-right: 5px;
  font-size: 12px;
}
</style>

<div class="payment-list-container">
  <div class="header-section">
    <h2>
      <i class="fas fa-cash-register"></i>
      Quản lý thanh toán
    </h2>
    <a href="/history" class="history-link">
      <i class="fas fa-history"></i> Xem lịch sử thanh toán
    </a>
  </div>

  <!-- Danh sách bàn cần thanh toán -->
  <div class="tables-grid">
    <h3>Bàn cần thanh toán</h3>
    <% if (tableNumbers && tableNumbers.length > 0) { %>
      <% tableNumbers.forEach(table => { %>
        <div class="table-card">
          <div class="table-header">
            <h4>Bàn <%= table %></h4>
            <span class="status">Đang chờ</span>
          </div>
          <a href="/payment/<%= table %>" class="btn btn-pay">
            <i class="fas fa-receipt"></i>
            Xem chi tiết & Thanh toán
          </a>
        </div>
      <% }) %>
    <% } else { %>
      <div class="no-tables-card">
        <p>Chưa có bàn nào cần thanh toán</p>
        <button class="btn-refresh" onclick="window.location.reload()">
          <i class="fas fa-sync-alt"></i> Làm mới
        </button>
      </div>
    <% } %>
  </div>
</div>

<%- include('../partials/footer') %>
  <!-- Danh s√°ch b√†n -->
  <div id="tableContainer" class="d-grid gap-2 ms-auto" 
       style="display: grid; grid-template-columns: repeat(2, 1fr); width: 200px">
    <h4 style="grid-column: span 2">ü™ë Ch·ªçn b√†n</h4>
    <% for (let i = 1; i <= 20; i++) { %>
